<mvc:View
    controllerName="inw.mockup.ewm.controller.Main"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        title="{i18n>appTitle}"
        id="page"
        class="sapUiContentPadding"
    >
        <customHeader>
            <Bar>
                <contentLeft />
                <contentMiddle>
                    <Title text="HauptmenÃ¼" />
                </contentMiddle>
                <contentRight>
                    <Button
                        icon="sap-icon://customer"
                        press=".onOpenUserDialog"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <FlexBox
                wrap="Wrap"
                justifyContent="SpaceBetween"
                gap="5px"
            >
                <VBox width="49%">
                    <GenericTile
                        width="100%"
                        press=".onPressReceipt"
                        header="Wareneingang"
                    >
                        <TileContent>
                            <VBox>
                                <core:Icon
                                    size="4em"
                                    src="sap-icon://inbox"
                                />
                            </VBox>
                        </TileContent>
                    </GenericTile>
                </VBox>
                <VBox width="49%">
                    <GenericTile
                        width="100%"
                        press=".onPressIssue"
                        header="Warenausgang"
                    >
                        <TileContent>
                            <VBox>
                                <core:Icon
                                    size="4em"
                                    src="sap-icon://outbox"
                                />
                            </VBox>
                        </TileContent>
                    </GenericTile>
                </VBox>
                <VBox width="49%">
                    <GenericTile
                        width="100%"
                        press=".onPressMessages"
                        header="Meldungen"
                    >
                        <TileContent>
                            <VBox>
                                <core:Icon
                                    size="4em"
                                    src="sap-icon://message-warning"
                                />
                            </VBox>
                        </TileContent>
                    </GenericTile>
                </VBox>
            </FlexBox>
        </content>
        <footer>
            <Toolbar>
                <Button icon="sap-icon://refresh" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
