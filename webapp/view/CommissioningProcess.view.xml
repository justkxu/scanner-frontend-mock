<mvc:View
    controllerName="inw.mockup.ewm.controller.CommissioningProcess"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        title="{i18n>appTitle}"
        id="commissioningProcessPage"
        class="sapUiContentPadding"
    >
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button
                        type="Back"
                        press=".onNavBack"
                    />
                </contentLeft>
                <contentMiddle>
                    <Title
                        id="headerTitle"
                        text="Kommissionierung - Position 1/5"
                    />
                </contentMiddle>
                <contentRight>
                    <core:Icon src="sap-icon://customer" />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <VBox class="sapUiMediumMargin">
                <HBox
                    alignItems="Center"
                    class="sapUiTinyMargin"
                >
                    <core:Icon
                        src="sap-icon://task"
                        size="3rem"
                        class="sapUiTinyMarginEnd"
                    />
                    <VBox width="100%">
                        <Label
                            text="TA-Position:"
                            width="140px"
                        />
                        <Text
                            id="positionText"
                            text="TA-2024-001234-001"
                        />
                    </VBox>
                </HBox>

                <VBox class="sapUiMediumMarginTop">
                    <HBox
                        alignItems="Center"
                        class="sapUiTinyMargin"
                    >
                        <Label
                            text="Von Lagertyp:"
                            width="140px"
                            class="sapUiMediumMarginEnd"
                        />
                        <Text text="Lagertyp" />
                    </HBox>

                    <HBox
                        alignItems="Center"
                        class="sapUiTinyMargin"
                    >
                        <Label
                            text="von Lagerplatz:"
                            width="140px"
                            class="sapUiMediumMarginEnd"
                        />
                        <Text text="Lagerplatz" />
                    </HBox>

                    <HBox
                        alignItems="Center"
                        class="sapUiTinyMargin"
                    >
                        <Label
                            text="Material:"
                            width="140px"
                            class="sapUiMediumMarginEnd"
                        />
                        <Text
                            id="materialText"
                            text="Schrauben M8x20"
                        />
                    </HBox>

                    <HBox
                        alignItems="Center"
                        class="sapUiTinyMargin"
                    >
                        <Label
                            text="Materialnr:"
                            width="140px"
                            class="sapUiMediumMarginEnd"
                        />
                        <Text
                            id="materialNumber"
                            text="Materialnummer"
                        />
                    </HBox>

                    <HBox
                        alignItems="Center"
                        class="sapUiTinyMargin"
                    >
                        <Label
                            text="Menge:"
                            width="140px"
                            class="sapUiMediumMarginEnd"
                        />
                        <Text
                            id="targetQuantity"
                            text="Menge (Einheit)"
                        />
                    </HBox>

                    <HBox
                        alignItems="Center"
                        class="sapUiTinyMargin"
                    >
                        <Label
                            text="Nach Lagerplatz:"
                            width="140px"
                            class="sapUiMediumMarginEnd"
                        />
                        <Text
                            id="targetLocation"
                            text="Lagerplatz"
                        />
                    </HBox>

                    <HBox
                        alignItems="Center"
                        class="sapUiTinyMargin"
                    >
                        <Label
                            text="(Serialnr:)"
                            width="140px"
                            class="sapUiMediumMarginEnd"
                        />
                        <Text text="Serialnummer" />
                    </HBox>

                    <HBox
                        alignItems="Center"
                        class="sapUiTinyMargin"
                    >
                        <Label
                            text="(Charge/Bewertungsart:)"
                            width="140px"
                            class="sapUiMediumMarginEnd"
                        />
                        <Text text="Charge/Bewertungsart" />
                    </HBox>

                    <HBox
                        alignItems="Center"
                        class="sapUiTinyMargin"
                    >
                        <Label
                            text="(KistenNr:)"
                            width="140px"
                            class="sapUiMediumMarginEnd"
                        />
                        <Text text="Kistennummer" />
                    </HBox>
                </VBox>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <Button icon="sap-icon://refresh" />
                <Button icon="sap-icon://keyboard-and-mouse" />
                <ToolbarSpacer />
                <Button
                    text="Position quittieren"
                    type="Emphasized"
                    icon="sap-icon://accept"
                    press=".onConfirmPosition"
                />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
