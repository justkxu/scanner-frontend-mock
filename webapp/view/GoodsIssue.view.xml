<mvc:View
    controllerName="inw.mockup.ewm.controller.GoodsIssue"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        title="{i18n>appTitle}"
        id="goodsIssuePage"
        class="sapUiContentPadding"
    >
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button
                        type="Back"
                        press=".onNavBack"
                    />
                </contentLeft>
                <contentMiddle>
                    <Title text="Warenausgang" />
                </contentMiddle>
                <contentRight>
                    <core:Icon src="sap-icon://customer" />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <FlexBox
                wrap="Wrap"
                justifyContent="SpaceBetween"
                gap="5px"
            >
                <VBox width="49%">
                    <GenericTile
                        width="100%"
                        header="Kommisionieren"
                        press=".onPressCommissioning"
                    >
                        <TileContent>
                            <core:Icon
                                size="4em"
                                src="sap-icon://cart"
                            />
                        </TileContent>
                    </GenericTile>
                </VBox>
                <VBox width="49%">
                    <GenericTile
                        width="100%"
                        header="TA Quittieren"
                        press=".onPressTAConfirmation"
                    >
                        <TileContent>
                            <core:Icon
                                size="4em"
                                src="sap-icon://accept"
                            />
                        </TileContent>
                    </GenericTile>
                </VBox>
            </FlexBox>
        </content>
        <footer>
            <Toolbar>
                <Button icon="sap-icon://refresh" />
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
